{
  "scripts": {
    "start": "http-server",
    "clean": "../node_modules/.bin/rimraf dist pkg",
    "dev": "npm run clean && npm run build",
    "build": "wasm-pack build",
    "build:release": "wasm-pack build --release && npm run optimize",
    "serve": "npm run clean && ../node_modules/.bin/webpack-dev-server --open -d",
    "test": "cargo test && wasm-pack test --headless --firefox",
    "optimize": "wasm-opt -O3 -o pkg/sha3_512_wasm_bg.wasm pkg/sha3_512_wasm_bg.wasm"
  }
}
